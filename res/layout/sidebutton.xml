<?xml version="1.0" encoding="utf-8"?>
<com.carqi.warehouse.widget.SlideButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sidebutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buttonbg"
    android:orientation="horizontal"
    android:padding="2dp" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="否"
            android:textColor="#ffffffff" >
        </TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="是"
            android:textColor="#ffffffff" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/indicate"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:background="@drawable/a0_btnpopwindowedit_normal" >
    </ImageView>
</com.carqi.warehouse.widget.SlideButton>